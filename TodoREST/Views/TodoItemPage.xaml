<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 x:Class="TodoREST.TodoItemPage" 
			 Title="Agregar Contacto">
	<StackLayout Margin="20">
		<Label Text="Nombre" />
		<Entry Text="{Binding Path=name}" 
               Placeholder="Ingrese su nombre" />
		<Label Text="Apellido" />
		<Entry Text="{Binding Path=lastname}"
               Placeholder="Ingrese su apellido" />
		<Label Text="Sexo" />
        <Entry Text="{Binding Path=gender}" 
               Placeholder="Ingrese su gÃ©nero"/>
        <Label Text="Fecha de nacimiento"/>
        <Entry Text="{Binding Path=birth}"
               Placeholder="Ingrese su fecha de nacimiento"/>
        <Button Text="Guardar" 
                Clicked="OnSaveButtonClicked" CornerRadius="20" BackgroundColor="#3b83bd" TextColor="White"/>
		<Button Text="Eliminar"
                Clicked="OnDeleteButtonClicked" CornerRadius="20" BackgroundColor="	#FF0000" TextColor="White"/>
		<Button Text="Cancelar" 
                Clicked="OnCancelButtonClicked" CornerRadius="20" BackgroundColor="#828282" TextColor="White"  />
	</StackLayout>
</ContentPage>
